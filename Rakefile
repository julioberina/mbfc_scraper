task :left do
   system "ruby mbfc_scraper.rb left" 
end

task :leftcenter do
    system "ruby mbfc_scraper.rb leftcenter"
end

task :center do
    system "ruby mbfc_scraper.rb center"
end

task :rightcenter do
    system "ruby mbfc_scraper.rb right-center"
end

task :right do 
    system "ruby mbfc_scraper.rb right"
end

task :default do 
    system "ruby mbfc_scraper.rb left"
    system "ruby mbfc_scraper.rb leftcenter"
    system "ruby mbfc_scraper.rb center"
    system "ruby mbfc_scraper.rb right-center"
    system "ruby mbfc_scraper.rb right"
end